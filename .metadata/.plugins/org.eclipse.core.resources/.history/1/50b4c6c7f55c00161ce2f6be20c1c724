package application;

import gameComponenets.Rectangle;
import javafx.application.Application;
import javafx.stage.Stage;

public class LevelsScreenController extends Application{
	private Stage window;
	private LevelsScreenView theView;
	private LevelsScreenModel theModel;


	@Override
	public void start(Stage primaryStage) throws Exception {
		theView = new LevelsScreenView();
		theModel = new LevelsScreenModel(5, 5);
		window = primaryStage;
		//int count = 1;
		theView.start(window);

		for(Rectangle r: theModel.getListButtons()){
			String i = Integer.toString(r.getId());
			int v = Integer.parseInt(i);
			theView.drawRectangle(r).setOnMouseClicked(e->{
				System.out.println("Directing you to level " + i);
			});
		}
	}
	public static void main(String[] args){
		launch(args);
	}
}
