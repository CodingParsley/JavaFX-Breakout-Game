package gameComponenets;

public class Button extends Rectangle {
	private String onAction;
	private Runnable doesSomething;

	public Button(Coordinate topLeft, double width, double height, RectangleType type, Runnable doesSomething) {
		super(topLeft, width, height, type);
		this.onAction = onAction;
		this.doesSomething=doesSomething;
	}

	public String getOnAction() {
		return onAction;
	}
	public Runnable getDoesSomething(){
		return doesSomething;
	}

}
