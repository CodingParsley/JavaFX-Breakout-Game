package gameComponents;
import java.util.LinkedList;
import java.util.Random;

import javafx.geometry.Point2D;
import javafx.scene.paint.Color;

public class FireEmitter extends Emitter{

	@Override
	public LinkedList<Particle> emit(double x, double y) {
		LinkedList<Particle> particles = new LinkedList<>();
		Random r = new Random();
		int numParticles = 1;
		for(int i =0; i<numParticles;i++){
			Particle p = new Particle(x,y,new Point2D((Math.random()-0.5)*0.65,0.2),
					10, 1, Color.rgb(215, 30, 65)
					//, BlendMode.ADD
					);
			particles.add(p);
		}

		return particles;
	}

}
