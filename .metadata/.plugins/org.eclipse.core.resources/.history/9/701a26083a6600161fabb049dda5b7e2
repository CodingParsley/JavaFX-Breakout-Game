package gameComponents;

public class PhotonBullet extends Rectangle{
	private int speed = 2;
	protected PhotonBullet(Coordinate topLeft, Coordinate bottomRight, int id, RectangleType type) {
		super(topLeft, bottomRight, id, type);
	}
	protected PhotonBullet(Coordinate topLeft, Coordinate bottomRight, RectangleType type) {
		super(topLeft, bottomRight, type);
	}
	public Packet getMove() {
		return new Packet(this.getTopLeftCoordinate().getMoveVelocity(Math.toRadians(180), speed), this.getWidth(), this.getHeight(),
				this.getId(), this.getType());
	}

}
