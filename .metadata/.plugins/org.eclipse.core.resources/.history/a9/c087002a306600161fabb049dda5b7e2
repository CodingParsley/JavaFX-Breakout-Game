package gameComponents;

public class Bat extends Rectangle{
	protected Bat(Coordinate topLeft, double width, double height, RectangleType type) {
		super(topLeft, width, height, type);
	}

	protected Bat(Coordinate topLeft, double width, double height, int id, RectangleType type) {
		super(topLeft, width, height, id, type);
	}

	public Bat createMove(double dx, double dy, RectangleType type) {
		return new Bat(this.getTopLeftCoordinate().getMoveDelta(dx, dy), this.getBottomRightCoordinate().getMoveDelta(dx, dy), this.id, type);
	}
	public Rectangle(Coordinate topLeft, Coordinate bottomRight, RectangleType type) {
		this(topLeft, bottomRight, count++, type);
	}

}
