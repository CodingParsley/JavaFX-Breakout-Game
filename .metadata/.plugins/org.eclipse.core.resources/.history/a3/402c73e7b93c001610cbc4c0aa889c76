package application;
import java.awt.geom.Line2D;

import javafx.scene.shape.Line;
public class Test {
	public static void run(){
		
		Line2D line1 = new Line2D.Float(100, 100, 200, 200);
		Line2D line2 = new Line2D.Float(150, 150, 150, 200);
		boolean result = line2.intersectsLine(line1);
		System.out.println(result); // => true

		
		
		Rectangle testR = new Rectangle(new Coordinate(0,0), 100,100);
		LineSegment testL = new LineSegment(new Coordinate(-10,50),testR.getCenterCoordinate());
		System.out.println("L"+testL.doLinesIntersect(testR.getLeftLineSegment()));
		System.out.println("R"+testL.doLinesIntersect(testR.getRightLineSegment()));
		System.out.println("B"+testL.doLinesIntersect(testR.getBottomLineSegement()));
		System.out.println("T"+testL.doLinesIntersect(testR.getTopLineSegment()));
	}
	public static void main(String[] args){
		run();
	}
}
