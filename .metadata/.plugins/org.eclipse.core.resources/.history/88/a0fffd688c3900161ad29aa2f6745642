package application;

import javafx.stage.Stage;
import javafx.scene.Scene;
import javafx.scene.input.KeyCode;
import javafx.scene.input.KeyEvent;
import javafx.scene.input.MouseEvent;
import javafx.scene.layout.Pane;
import javafx.scene.shape.Rectangle;
import application.TheController.MovePaddleLeft;
import application.TheController.MovePaddleRight;
import javafx.application.Application;
import javafx.event.ActionEvent;
import javafx.event.EventHandler;
public class TheView extends Application{
	Stage window;
	Scene scene;
	@Override
	public void start(Stage primaryStage) throws Exception {
		window = primaryStage;
		Pane layout =new Pane();
		Rectangle r = new Rectangle();
		r.setTranslateX(20);
		r.setTranslateY(20);
		r.setWidth(20);
		r.setHeight(20);
		layout.getChildren().add(r);
		scene = new Scene(layout,500,500);
		scene.addEventFilter(KeyEvent.ANY, new EventHandler<KeyEvent>() {
			public void handle(KeyEvent k) {
				if(k.getCode()==KeyCode.A){
				System.out.println("HI");
			};
		});
		window.setScene(scene);
		window.show();
	}
	public static void main(String[] args){
		launch(args);
	}

	public TheView()  {

	}


	private Runnable onTypePaddleMoveLeft;
	private Runnable onTypePaddleMoveRight;

	public TheView(Runnable onTypePaddleMoveLeft, Runnable onTypePaddleMoveRight){
		this.onTypePaddleMoveLeft = onTypePaddleMoveLeft;
		this.onTypePaddleMoveRight = onTypePaddleMoveRight;
	}
}
